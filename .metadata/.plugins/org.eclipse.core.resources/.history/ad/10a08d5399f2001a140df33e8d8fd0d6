package me.misleaded.forceWand.items;

import java.util.ArrayList;
import java.util.List;

import org.bukkit.Material;
import org.bukkit.enchantments.Enchantment;
import org.bukkit.inventory.ItemFlag;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;
import org.bukkit.util.Vector;

public class Wand {
	
	public static ItemStack wand;
	
	public static void init() {
		createWand();
	}
	
	public static void createWand() {
		ItemStack stick = new ItemStack(Material.STICK, 1);
		ItemMeta stickMeta = stick.getItemMeta();
		stickMeta.setDisplayName("ยง6Force Wand");
		List<String> lore = new ArrayList<>();
		lore.add("ยง7This special wand allows");
		lore.add("ยง7you to push entities away!");
		stickMeta.setLore(lore);
		stickMeta.addEnchant(Enchantment.KNOCKBACK, 5, true);
		stickMeta.addItemFlags(ItemFlag.HIDE_ENCHANTS);
		stick.setItemMeta(stickMeta);
		
		wand = stick;
	}
	
	public static Vector push(Vector p, Vector e) {
		Vector v = e.subtract(p);
		v = v.normalize();
		v.setY(0.25);
		return v;
		
	}
}
